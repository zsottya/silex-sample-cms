{% extends theme ~ "/layout.twig" %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Bejelentkezés</h2>

            {% if error %}        
                <div class="alert alert-danger">
                <strong>Hiba történt!</strong> {{ error }}
                </div>
            {% endif %}

            <div class="panel panel-default well">
                <div class="panel-body">
                    <form action="{{ path('admin_login_check') }}" method="post">
                        
                        <div class="form-group">
                            <label for="username">Felhasználói név: </label>
                            <input id="username" type="text" name="_username" value="{{ last_username }}" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="password">Jelszó: </label>
                            <input id="password" type="password" name="_password" class="form-control">
                        </div>

                        <input type="submit" value="Belépés" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
